<h2>Create Games!<h2>
<br>
<form method="post" action="/games">
<label>Select User:</label>
    <select name="user_id">
        <% @users.each do |user| %>
            <option value="<%= user.id %>"><%= user.name %></option>
            <% end %>
            </select>
            <br>
            <label>Title:</label>
            <input type="text" name="title">
            <br>
            <textarea name="description"></textarea>
            <br>
            <input type="submit">

</form>